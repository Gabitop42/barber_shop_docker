---
import Layout from "@/layouts/Layout.astro"
---

<Layout title="Dashboard">
  <div class="">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="flex items-center gap-4 mb-8">
        <div class="p-3 bg-burdeos rounded-lg">
          <!-- Dashboard Icon -->
          <svg
            class="h-8 w-8 text-marfil"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              d="M3 3h6v6H3V3zM15 3h6v6h-6V3zM3 15h6v6H3v-6zM15 15h6v6h-6v-6z"
            ></path>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-marfil">Dashboard</h1>
          <p class="text-marfil/70">Panel de control de Barbería Bigotes</p>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Card 1 -->
        <div class="bg-marfil/10 border border-marfil/20 rounded-lg p-4">
          <div class="flex items-center justify-between pb-2">
            <h3 class="text-sm font-medium text-marfil">Ventas Hoy</h3>
            <svg
              class="h-4 w-4 text-burdeos"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 8c-1.11 0-2-.89-2-2s.89-2 2-2 2 .89 2 2-.89 2-2 2zm0 2c2.21 0 4 1.79 4 4H8c0-2.21 1.79-4 4-4zm0 6c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
              ></path>
            </svg>
          </div>
          <div class="text-2xl font-bold text-marfil">S/. 1,250</div>
          <p class="text-xs text-green-400">+12% desde ayer</p>
        </div>

        <!-- Card 2 -->
        <div class="bg-marfil/10 border border-marfil/20 rounded-lg p-4">
          <div class="flex items-center justify-between pb-2">
            <h3 class="text-sm font-medium text-marfil">Citas Hoy</h3>
            <svg
              class="h-4 w-4 text-burdeos"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                d="M8 7V3m8 4V3M3 11h18M5 21h14a2 2 0 002-2V7H3v12a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <div class="text-2xl font-bold text-marfil">24</div>
          <p class="text-xs text-green-400">+3 desde ayer</p>
        </div>

        <!-- Card 3 -->
        <div class="bg-marfil/10 border border-marfil/20 rounded-lg p-4">
          <div class="flex items-center justify-between pb-2">
            <h3 class="text-sm font-medium text-marfil">Barberos Activos</h3>
            <svg
              class="h-4 w-4 text-burdeos"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                d="M17 20h5v-2a4 4 0 00-5-3.87M9 20H4v-2a4 4 0 015-3.87M12 12a4 4 0 100-8 4 4 0 000 8zm6 8v-1a6 6 0 00-12 0v1"
              ></path>
            </svg>
          </div>
          <div class="text-2xl font-bold text-marfil">5</div>
          <p class="text-xs text-marfil/60">de 6 total</p>
        </div>

        <!-- Card 4 -->
        <div class="bg-marfil/10 border border-marfil/20 rounded-lg p-4">
          <div class="flex items-center justify-between pb-2">
            <h3 class="text-sm font-medium text-marfil">Servicios</h3>
            <svg
              class="h-4 w-4 text-burdeos"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path d="M4 15h16M4 12h16M4 9h16M4 6h16"></path>
            </svg>
          </div>
          <div class="text-2xl font-bold text-marfil">18</div>
          <p class="text-xs text-marfil/60">servicios disponibles</p>
        </div>
      </div>

      <!-- Recent Activity & Monthly Sales -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Appointments -->
        <div class="bg-marfil/10 border border-marfil/20 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-marfil">Citas Recientes</h3>
          <p class="text-sm text-marfil/70 mb-4">Últimas citas programadas</p>
          <div class="space-y-4">
            <!-- Appointment Item -->
            <div
              class="flex items-center justify-between p-3 bg-carbon/30 rounded-lg"
            >
              <div>
                <p class="text-marfil font-medium">Juan Pérez</p>
                <p class="text-sm text-marfil/60">Corte + Barba</p>
              </div>
              <div class="text-right">
                <p class="text-sm text-marfil">10:30</p>
                <p class="text-sm text-burdeos">Carlos</p>
              </div>
            </div>
            <!-- Repeat -->
            <div
              class="flex items-center justify-between p-3 bg-carbon/30 rounded-lg"
            >
              <div>
                <p class="text-marfil font-medium">María García</p>
                <p class="text-sm text-marfil/60">Corte Clásico</p>
              </div>
              <div class="text-right">
                <p class="text-sm text-marfil">11:00</p>
                <p class="text-sm text-burdeos">José</p>
              </div>
            </div>
            <div
              class="flex items-center justify-between p-3 bg-carbon/30 rounded-lg"
            >
              <div>
                <p class="text-marfil font-medium">Luis Rodríguez</p>
                <p class="text-sm text-marfil/60">Afeitado</p>
              </div>
              <div class="text-right">
                <p class="text-sm text-marfil">11:30</p>
                <p class="text-sm text-burdeos">Carlos</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Monthly Sales -->
        <div class="bg-marfil/10 border border-marfil/20 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-marfil">Ventas del Mes</h3>
          <p class="text-sm text-marfil/70 mb-4">Resumen de ingresos</p>
          <div class="space-y-4">
            <div class="flex justify-between">
              <span class="text-marfil">Total del mes</span>
              <span class="text-2xl font-bold text-marfil">S/. 28,450</span>
            </div>
            <div class="flex justify-between">
              <span class="text-marfil/70">Objetivo mensual</span>
              <span class="text-marfil/70">S/. 30,000</span>
            </div>
            <div class="w-full bg-carbon/30 rounded-full h-2">
              <div class="bg-burdeos h-2 rounded-full" style="width: 95%"></div>
            </div>
            <p class="text-sm text-green-400 flex items-center gap-1">
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M3 17l6-6 4 4 8-8"></path>
              </svg>
              95% del objetivo alcanzado
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
